---
interface Value {
  icon: string;
  title: string;
  description: string;
}

const values: Value[] = [
  {
    icon: 'eye',
    title: 'Clarté',
    description: 'Pas de jargon. On vous explique jusqu\'à ce que ce soit limpide.'
  },
  {
    icon: 'unlock',
    title: 'Autonomie',
    description: 'L\'objectif : que vous n\'ayez plus besoin de nous.'
  },
  {
    icon: 'check',
    title: 'Simplicité',
    description: 'La solution la plus simple qui fonctionne. Toujours.'
  },
  {
    icon: 'anchor',
    title: 'Durabilité',
    description: 'Des solutions qui tiennent, documentées, maintenables.'
  }
];

const iconPaths: Record<string, string> = {
  eye: 'M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8zM12 9a3 3 0 1 0 0 6 3 3 0 0 0 0-6z',
  unlock: 'M19 11H5a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2zM7 11V7a5 5 0 0 1 9.9-1',
  check: 'M22 11.08V12a10 10 0 1 1-5.93-9.14M22 4L12 14.01l-3-3',
  anchor: 'M12 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zM12 8v14M5 12H2a10 10 0 0 0 20 0h-3'
};
---

<section id="about" class="about">
  <div class="container">
    <div class="about-grid">
      <div class="about-content">
        <span class="section-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          À propos
        </span>
        <h2>Pourquoi BubbleStone</h2>
        <p class="about-vision">
          Trop d'entreprises paient des outils qu'elles n'exploitent pas, perdent des heures
          sur des tâches automatisables, et hésitent à franchir le pas de l'IA par manque de repères.
          On est là pour débloquer ça — avec des résultats visibles dès les premiers jours.
        </p>
        <a href="#contact" class="btn btn-primary">
          Discuter de votre projet
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="about-values">
        {values.map(value => (
          <div class="value-card">
            <div class="value-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d={iconPaths[value.icon]} />
              </svg>
            </div>
            <div class="value-content">
              <h3>{value.title}</h3>
              <p>{value.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    padding: var(--spacing-3xl) 0;
    position: relative;
  }

  .about::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-white);
    z-index: -1;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .about-content {
    max-width: 500px;
    position: relative;
    z-index: 100;
  }

  .about-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .about-vision {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-primary);
    line-height: 1.5;
    margin-bottom: var(--spacing-md);
  }

  .about-description {
    font-size: 1rem;
    color: var(--color-gray-600);
    line-height: 1.7;
    margin-bottom: var(--spacing-lg);
  }

  .about-values {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    position: relative;
    z-index: 100;
  }

  .value-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    transition: all var(--transition-slow);
    position: relative;
    z-index: 100;
  }

  .value-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .value-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-accent);
    margin-bottom: 1rem;
    transition: all var(--transition-base);
  }

  .value-card:hover .value-icon {
    background: var(--gradient-primary);
    color: white;
  }

  .value-content h3 {
    font-size: 1rem;
    margin-bottom: 0.375rem;
    color: var(--color-primary);
  }

  .value-content p {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    line-height: 1.5;
  }

  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .about-content {
      max-width: 100%;
      text-align: center;
    }

    .about-content .btn {
      display: inline-flex;
    }
  }

  @media (max-width: 640px) {
    .about-values {
      grid-template-columns: 1fr;
    }
  }
</style>
