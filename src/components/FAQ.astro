---
interface FAQItem {
  question: string;
  answer: string;
}

const faqs: FAQItem[] = [
  {
    question: "Quels types d'entreprises accompagnez-vous ?",
    answer: "Nous accompagnons les PME, ETI et associations de toutes tailles. Notre expertise s'adapte à vos besoins spécifiques, que vous soyez une startup en croissance ou une entreprise établie cherchant à moderniser son IT."
  },
  {
    question: "Combien coûte un audit de sécurité ?",
    answer: "Le coût dépend de la taille de votre infrastructure et du périmètre souhaité. Nous proposons des audits à partir de 2 500€ pour une PME standard. Contactez-nous pour un devis personnalisé gratuit."
  },
  {
    question: "Qu'est-ce que l'automatisation avec n8n ?",
    answer: "n8n est une plateforme d'automatisation open-source que nous utilisons pour connecter vos outils et automatiser vos processus. Elle permet de créer des workflows sans code, réduisant drastiquement les tâches manuelles répétitives."
  },
  {
    question: "Proposez-vous un support continu ?",
    answer: "Oui, nous proposons des contrats de maintenance et support adaptés à vos besoins : de l'assistance ponctuelle au support 24/7. Notre équipe reste disponible pour vous accompagner dans la durée."
  },
  {
    question: "Comment se déroule une mission type ?",
    answer: "Nous commençons par un diagnostic gratuit de vos besoins, puis nous établissons une proposition détaillée. La mission démarre par une phase d'analyse, suivie de l'implémentation et d'une période d'accompagnement post-projet."
  }
];
---

<section class="faq section-stone">
  <div class="faq-stone-texture"></div>
  <div class="container">
    <div class="section-header">
      <span class="section-badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        FAQ
      </span>
      <h2>Questions fréquentes</h2>
      <p>Tout ce que vous devez savoir sur nos services et notre accompagnement.</p>
    </div>

    <div class="faq-list">
      {faqs.map((faq, index) => (
        <details class="faq-item" data-index={index}>
          <summary class="faq-question">
            <span>{faq.question}</span>
            <div class="faq-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
              </svg>
            </div>
          </summary>
          <div class="faq-answer">
            <p>{faq.answer}</p>
          </div>
        </details>
      ))}
    </div>

    <div class="faq-cta">
      <p>Vous avez d'autres questions ?</p>
      <a href="#contact" class="btn btn-secondary">
        Contactez-nous
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .faq {
    padding: var(--spacing-3xl) 0;
    position: relative;
    overflow: hidden;
  }

  /* Stone texture overlay */
  .faq-stone-texture {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.035;
    pointer-events: none;
  }

  /* Top edge highlight */
  .faq::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(148, 163, 184, 0.4) 50%, transparent 100%);
    z-index: 1;
  }

  .faq .container {
    position: relative;
    z-index: 1;
  }

  /* Override section-header for dark background */
  .faq .section-header h2 {
    color: var(--color-white);
  }

  .faq .section-header p {
    color: var(--color-gray-400);
  }

  .faq .section-badge {
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: linear-gradient(145deg, rgba(51, 65, 85, 0.6) 0%, rgba(30, 41, 59, 0.8) 100%);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(71, 85, 105, 0.5);
    border-top-color: rgba(148, 163, 184, 0.2);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-slow);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .faq-item:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 15px rgba(59, 130, 246, 0.3),
      0 0 30px rgba(59, 130, 246, 0.15),
      0 0 45px rgba(59, 130, 246, 0.05);
  }

  .faq-item[open] {
    border-color: rgba(59, 130, 246, 0.6);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.4),
      0 0 40px rgba(59, 130, 246, 0.2),
      0 0 60px rgba(59, 130, 246, 0.1);
  }

  .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    list-style: none;
    font-weight: 500;
    color: var(--color-white);
    transition: all var(--transition-base);
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question span {
    font-size: 1rem;
  }

  .faq-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: var(--radius-md);
    color: var(--color-accent-light);
    flex-shrink: 0;
    transition: all var(--transition-base);
  }

  .faq-item[open] .faq-icon {
    background: var(--gradient-primary);
    border-color: transparent;
    color: white;
    transform: rotate(45deg);
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem;
    animation: faq-open 0.3s ease;
  }

  @keyframes faq-open {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .faq-answer p {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-gray-400);
    padding-top: 1rem;
    border-top: 1px solid rgba(71, 85, 105, 0.5);
  }

  .faq-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid rgba(71, 85, 105, 0.5);
  }

  .faq-cta p {
    font-size: 1rem;
    color: var(--color-gray-400);
  }

  /* Style the button for dark background */
  .faq-cta .btn-secondary {
    background: rgba(51, 65, 85, 0.6);
    border-color: rgba(71, 85, 105, 0.6);
    color: var(--color-white);
  }

  .faq-cta .btn-secondary:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
  }

  @media (max-width: 768px) {
    .faq-question {
      padding: 1rem 1.25rem;
    }

    .faq-question span {
      font-size: 0.9375rem;
    }

    .faq-answer {
      padding: 0 1.25rem 1.25rem;
    }
  }
</style>
