    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>

<script>
  // Mini Blob Animation for Footer Logo
  class FooterPoint {
    x: number;
    y: number;
    originX: number;
    originY: number;
    velocity: number = 0;
    acceleration: number = 0;
    elasticity: number = 0.001;
    friction: number = 0.0085;

    constructor(x: number, y: number) {
      this.x = x;
      this.y = y;
      this.originX = x;
      this.originY = y;
    }

    update() {
      const dx = this.originX - this.x;
      const dy = this.originY - this.y;
      const dist = Math.sqrt(dx * dx + dy * dy);

      this.acceleration += dist * this.elasticity;
      this.velocity += this.acceleration;
      this.velocity *= (1 - this.friction);

      const angle = Math.atan2(dy, dx);
      this.x += Math.cos(angle) * this.velocity;
      this.y += Math.sin(angle) * this.velocity;

      this.acceleration = 0;
    }
  }

  class FooterBlob {
    canvas: HTMLCanvasElement;
    ctx: CanvasRenderingContext2D;
    video: HTMLVideoElement;
    points: FooterPoint[] = [];
    centerX: number = 0;
    centerY: number = 0;
    radius: number = 0;
    numPoints: number = 24;
    time: number = 0;
    scale: number = 3;

    constructor(canvas: HTMLCanvasElement, video: HTMLVideoElement) {
      this.canvas = canvas;
      this.ctx = canvas.getContext('2d')!;
      this.video = video;
      this.resize();
      this.initPoints();

      window.addEventListener('resize', () => this.resize());
      this.canvas.addEventListener('mouseenter', () => this.onHover());
    }

    resize() {
      const displaySize = 32;
      const size = displaySize * this.scale;
      this.canvas.width = size;
      this.canvas.height = size;
      this.centerX = size / 2;
      this.centerY = size / 2;
      this.radius = size * 0.42;
      this.initPoints();
    }

    initPoints() {
      this.points = [];
      for (let i = 0; i < this.numPoints; i++) {
        const angle = (i / this.numPoints) * Math.PI * 2;
        const x = this.centerX + Math.cos(angle) * this.radius;
        const y = this.centerY + Math.sin(angle) * this.radius;
        this.points.push(new FooterPoint(x, y));
      }
    }

    onHover() {
      this.points.forEach((point, i) => {
        const angle = (i / this.numPoints) * Math.PI * 2;
        point.x += Math.cos(angle) * 1.5;
        point.y += Math.sin(angle) * 1.5;
      });
    }

    draw() {
      const ctx = this.ctx;
      const size = this.canvas.width;

      ctx.clearRect(0, 0, size, size);

      this.time += 0.02;
      this.points.forEach((point, i) => {
        const angle = (i / this.numPoints) * Math.PI * 2;
        const wave = Math.sin(this.time + i * 0.5) * 0.3;
        point.originX = this.centerX + Math.cos(angle) * (this.radius + wave);
        point.originY = this.centerY + Math.sin(angle) * (this.radius + wave);
        point.update();
      });

      ctx.save();
      ctx.beginPath();

      const pts = this.points;
      const len = pts.length;

      const firstMidX = (pts[0].x + pts[len - 1].x) / 2;
      const firstMidY = (pts[0].y + pts[len - 1].y) / 2;
      ctx.moveTo(firstMidX, firstMidY);

      for (let i = 0; i < len; i++) {
        const p1 = pts[i];
        const p2 = pts[(i + 1) % len];
        const midX = (p1.x + p2.x) / 2;
        const midY = (p1.y + p2.y) / 2;
        ctx.quadraticCurveTo(p1.x, p1.y, midX, midY);
      }

      ctx.closePath();
      ctx.clip();

      if (this.video.readyState >= this.video.HAVE_CURRENT_DATA) {
        const vw = this.video.videoWidth;
        const vh = this.video.videoHeight;
        const padding = 1.6;
        const scale = Math.max(size / vw, size / vh) * padding;
        const w = vw * scale;
        const h = vh * scale;
        const x = (size - w) / 2;
        const y = (size - h) / 2;

        ctx.filter = 'grayscale(100%) brightness(1.1) contrast(0.9)';
        ctx.drawImage(this.video, x, y, w, h);
        ctx.filter = 'none';

        ctx.globalCompositeOperation = 'color';
        const gradient = ctx.createRadialGradient(size/2, size/2, 0, size/2, size/2, size * 0.5);
        gradient.addColorStop(0, 'rgba(120, 180, 255, 1)');
        gradient.addColorStop(0.6, 'rgba(59, 130, 246, 1)');
        gradient.addColorStop(1, 'rgba(99, 102, 241, 1)');
        ctx.fillStyle = gradient;
        ctx.fillRect(x, y, w, h);

        ctx.globalCompositeOperation = 'soft-light';
        ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
        ctx.fillRect(x, y, w, h);

        ctx.globalCompositeOperation = 'source-over';
      }

      ctx.restore();

      requestAnimationFrame(() => this.draw());
    }

    start() {
      this.draw();
    }
  }

  // Initialize footer blob
  const footerCanvas = document.getElementById('footer-blob-canvas') as HTMLCanvasElement;
  const footerVideo = document.getElementById('footer-sphere-video') as HTMLVideoElement;

  if (footerCanvas && footerVideo) {
    const footerBlob = new FooterBlob(footerCanvas, footerVideo);

    const playFooterVideo = () => {
      footerVideo.play().catch(() => {
        document.addEventListener('click', () => footerVideo.play(), { once: true });
      });
    };

    footerVideo.addEventListener('loadeddata', () => {
      playFooterVideo();
      footerBlob.start();
    });

    if (footerVideo.readyState >= footerVideo.HAVE_CURRENT_DATA) {
      playFooterVideo();
      footerBlob.start();
    }
  }
</script>
