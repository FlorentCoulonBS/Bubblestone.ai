---
interface Service {
  icon: string;
  title: string;
  description: string;
  features: string[];
}

const services: Service[] = [
  {
    icon: 'dashboard',
    title: 'Pilotage IT 360°',
    description: 'Déploiement, monitoring, support, réduction des coûts, optimisation des ressources, sécurisation, l\'IA au cœur de votre infrastructure.',
    features: ['Monitoring proactif', 'Optimisation des coûts', 'Support réactif', 'Infrastructure as Code']
  },
  {
    icon: 'workflow',
    title: 'Tout automatiser',
    description: 'Produire plus, plus vite, tout le temps, sans plus d\'effort. Tout est aujourd\'hui devenu possible.',
    features: ['Workflows n8n', 'Intégrations API', 'MCP', 'Automatisation 24/7']
  },
  {
    icon: 'database',
    title: 'Data Management',
    description: 'Valoriser ce que votre entreprise a de plus précieux, son savoir.',
    features: ['Centralisation des données', 'Bases de connaissances', 'ETL & pipelines', 'Qualité des données']
  },
  {
    icon: 'process',
    title: 'Processus Métier',
    description: 'Augmenter la qualité, la vitesse et la précision du travail de vos collaborateurs.',
    features: ['Digitalisation des processus', 'Réduction des erreurs', 'Traçabilité complète', 'Gains de productivité']
  },
  {
    icon: 'target',
    title: 'Prospection Commerciale',
    description: 'Boosté par l\'IA, vos équipes Sales détectent en amont des leads plus qualifiés, ont une meilleure connaissance de leurs cibles et clients, et transforment mieux et plus vite.',
    features: ['Enrichissement de leads', 'Scoring prédictif', 'Intégration CRM', 'Veille automatisée']
  },
  {
    icon: 'bot',
    title: 'IA & Machine Learning',
    description: 'Connaître les forces et faiblesses de chaque modèle d\'IA, les entraîner efficacement, pour répondre efficacement à chaque besoin métier.',
    features: ['LLM personnalisés', 'Agents autonomes', 'Fine-tuning', 'RAG & embeddings']
  }
];

const iconPaths: Record<string, string> = {
  dashboard: 'M3 3h7v9H3V3zM14 3h7v5h-7V3zM14 12h7v9h-7v-9zM3 16h7v5H3v-5z',
  database: 'M12 2C6.48 2 2 4.02 2 6.5v11C2 19.98 6.48 22 12 22s10-2.02 10-4.5v-11C22 4.02 17.52 2 12 2zM12 4c4.42 0 8 1.57 8 3.5S16.42 11 12 11 4 9.43 4 7.5 7.58 4 12 4zM4 17.5V15c0 1.93 3.58 3.5 8 3.5s8-1.57 8-3.5v2.5c0 1.93-3.58 3.5-8 3.5s-8-1.57-8-3.5z',
  process: 'M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zM9 13h6M9 17h6M14 2v6h6',
  bot: 'M12 8V4H8M12 8a4 4 0 1 0 0 8 4 4 0 0 0 0-8zM12 16v4M8 20h8M9 9L6 6M15 9l3-3',
  workflow: 'M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z',
  target: 'M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zM12 18a6 6 0 1 0 0-12 6 6 0 0 0 0 12zM12 14a2 2 0 1 0 0-4 2 2 0 0 0 0 4z'
};
---

<section id="services" class="services">
  <div class="container">
    <div class="services-header-wrapper">
      <div class="services-glow"></div>
      <div class="section-header">
        <span class="section-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          </svg>
          Ce qu'on fait
        </span>
        <h2>Déployer l'IA là où elle compte vraiment</h2>
        <p>Workflows intelligents, infrastructures cloud et valorisation de vos données. Du conseil au run.</p>
      </div>
    </div>

    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card" style={`--index: ${index}`}>
          <div class="service-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d={iconPaths[service.icon]} />
            </svg>
          </div>
          <h3>{service.title}</h3>
          <p>{service.description}</p>
          <ul class="service-features">
            {service.features.map(feature => (
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#contact" class="service-link">
            En savoir plus
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--spacing-3xl) 0;
    position: relative;
  }

  .services::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-gray-50);
    z-index: -1;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    position: relative;
    z-index: 100;
  }

  .service-card {
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    transition: all var(--transition-slow);
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
  }

  .service-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .service-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    margin-bottom: var(--spacing-md);
    transition: all var(--transition-base);
  }

  .service-card:hover .service-icon {
    background: var(--gradient-primary);
    color: white;
    transform: scale(1.05);
  }

  .service-card h3 {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .service-card > p {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md) 0;
    flex: 1;
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: 0.875rem;
    color: var(--color-gray-600);
    border-bottom: 1px solid var(--color-gray-100);
  }

  .service-features li:last-child {
    border-bottom: none;
  }

  .service-features svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    transition: all var(--transition-base);
    margin-top: auto;
  }

  .service-link:hover {
    gap: 0.75rem;
    color: var(--color-accent-dark);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Wrapper avec effet halo pour le header */
  .services-header-wrapper {
    position: relative;
    max-width: 700px;
    margin: 0 auto var(--spacing-2xl) auto;
    padding: var(--spacing-xl);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    overflow: hidden;
    z-index: 100;
    transition: border-color 0.5s ease, box-shadow 0.5s ease;
  }

  .services-header-wrapper .section-header {
    margin-bottom: 0;
  }

  .services-header-wrapper.line-reached {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .services-glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .services-header-wrapper {
      padding: var(--spacing-lg) var(--spacing-md);
    }
  }
</style>
