---
interface Service {
  icon: string;
  title: string;
  description: string;
  features: string[];
}

const services: Service[] = [
  {
    icon: 'shield',
    title: 'Audits & Sécurité',
    description: 'Évaluation complète de votre posture de sécurité et mise en conformité.',
    features: ['Audit d\'architecture', 'Conformité RGPD/ISO 27001', 'Tests de pénétration', 'Gestion des accès']
  },
  {
    icon: 'cloud',
    title: 'Microsoft 365 & Azure',
    description: 'Déploiement et optimisation de votre environnement cloud Microsoft.',
    features: ['Migration cloud', 'Gestion des licences', 'Durcissement sécurité', 'Intégration Copilot']
  },
  {
    icon: 'chart',
    title: 'Gouvernance IT',
    description: 'Pilotage stratégique de votre système d\'information.',
    features: ['RSI/RSSI externalisé', 'Gestion des risques', 'Tableaux de bord', 'Reporting conformité']
  },
  {
    icon: 'bot',
    title: 'Intelligence Artificielle',
    description: 'Intégration de l\'IA dans vos processus métier.',
    features: ['Modèles personnalisés', 'Chatbots intelligents', 'Analyse prédictive', 'Automatisation IA']
  },
  {
    icon: 'workflow',
    title: 'Automatisation',
    description: 'Workflows intelligents pour optimiser vos opérations.',
    features: ['Workflows n8n', 'Intégrations API', 'RPA No-Code', 'Processus métier']
  },
  {
    icon: 'target',
    title: 'Conseil Stratégique',
    description: 'Accompagnement dans votre transformation digitale.',
    features: ['Roadmap IT', 'Choix technologiques', 'Conduite du changement', 'Formation équipes']
  }
];

const iconPaths: Record<string, string> = {
  shield: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  cloud: 'M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z',
  chart: 'M18 20V10M12 20V4M6 20v-6',
  bot: 'M12 8V4H8M12 8a4 4 0 1 0 0 8 4 4 0 0 0 0-8zM12 16v4M8 20h8M9 9L6 6M15 9l3-3',
  workflow: 'M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z',
  target: 'M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zM12 18a6 6 0 1 0 0-12 6 6 0 0 0 0 12zM12 14a2 2 0 1 0 0-4 2 2 0 0 0 0 4z'
};
---

<section id="services" class="services">
  <div class="container">
    <div class="services-header-wrapper">
      <div class="services-glow"></div>
      <div class="section-header">
        <span class="section-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          </svg>
          Nos Services
        </span>
        <h2>Des solutions adaptées à vos enjeux</h2>
        <p>Expertise technique et accompagnement stratégique pour transformer votre IT.</p>
      </div>
    </div>

    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card" style={`--index: ${index}`}>
          <div class="service-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d={iconPaths[service.icon]} />
            </svg>
          </div>
          <h3>{service.title}</h3>
          <p>{service.description}</p>
          <ul class="service-features">
            {service.features.map(feature => (
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#contact" class="service-link">
            En savoir plus
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--spacing-3xl) 0;
    position: relative;
  }

  .services::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-gray-50);
    z-index: -1;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    position: relative;
    z-index: 100;
  }

  .service-card {
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    transition: all var(--transition-slow);
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
  }

  .service-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .service-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    margin-bottom: var(--spacing-md);
    transition: all var(--transition-base);
  }

  .service-card:hover .service-icon {
    background: var(--gradient-primary);
    color: white;
    transform: scale(1.05);
  }

  .service-card h3 {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .service-card > p {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md) 0;
    flex: 1;
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: 0.875rem;
    color: var(--color-gray-600);
    border-bottom: 1px solid var(--color-gray-100);
  }

  .service-features li:last-child {
    border-bottom: none;
  }

  .service-features svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    transition: all var(--transition-base);
    margin-top: auto;
  }

  .service-link:hover {
    gap: 0.75rem;
    color: var(--color-accent-dark);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Wrapper avec effet halo pour le header */
  .services-header-wrapper {
    position: relative;
    max-width: 700px;
    margin: 0 auto var(--spacing-2xl) auto;
    padding: var(--spacing-xl);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    overflow: hidden;
    z-index: 100;
    transition: border-color 0.5s ease, box-shadow 0.5s ease;
  }

  .services-header-wrapper .section-header {
    margin-bottom: 0;
  }

  .services-header-wrapper.line-reached {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .services-glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .services-header-wrapper {
      padding: var(--spacing-lg) var(--spacing-md);
    }
  }
</style>
