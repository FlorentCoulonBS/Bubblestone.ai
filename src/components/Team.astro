---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  linkedin?: string;
}

const team: TeamMember[] = [
  {
    name: 'Florent Coulon',
    role: 'Fondateur & CEO',
    image: '/images/team/florent.jpg',
    linkedin: 'https://www.linkedin.com/in/florentcoulon/'
  },
  {
    name: 'À venir',
    role: 'Expert IA',
    image: '/images/team/placeholder.jpg'
  },
  {
    name: 'À venir',
    role: 'Lead Developer',
    image: '/images/team/placeholder.jpg'
  }
];
---

<section id="team" class="team">
  <div class="container">
    <div class="team-header-wrapper">
      <div class="section-header">
        <span class="section-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
          L'équipe
        </span>
        <h2>Les experts derrière BubbleStone</h2>
        <p>Une équipe passionnée par l'IA et l'automatisation, prête à transformer votre business.</p>
      </div>
    </div>

    <div class="team-grid">
      {team.map((member) => (
        <div class="team-card">
          <div class="team-image-wrapper">
            <div class="team-image">
              {member.image.includes('placeholder') ? (
                <div class="team-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                  </svg>
                </div>
              ) : (
                <img src={member.image} alt={member.name} loading="lazy" />
              )}
            </div>
          </div>
          <div class="team-info">
            <h3>{member.name}</h3>
            <p>{member.role}</p>
            {member.linkedin && (
              <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="team-linkedin" aria-label={`LinkedIn de ${member.name}`}>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    padding: var(--spacing-3xl) 0;
    position: relative;
  }

  .team::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-white);
    z-index: -1;
  }

  .team-header-wrapper {
    position: relative;
    max-width: 700px;
    margin: 0 auto var(--spacing-2xl) auto;
    padding: var(--spacing-xl);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    overflow: hidden;
    z-index: 100;
    transition: border-color 0.5s ease, box-shadow 0.5s ease;
  }

  .team-header-wrapper .section-header {
    margin-bottom: 0;
  }

  .team-header-wrapper.line-reached {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    z-index: 100;
  }

  .team-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .team-image-wrapper {
    position: relative;
    margin-bottom: -40px;
    z-index: 10;
  }

  .team-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid var(--color-white);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    background: var(--color-gray-100);
    transition: all var(--transition-slow);
  }

  .team-card:hover .team-image {
    transform: scale(1.05);
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.15),
      0 0 20px rgba(59, 130, 246, 0.3);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .team-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-gray-100) 0%, var(--color-gray-200) 100%);
    color: var(--color-gray-400);
  }

  .team-info {
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    padding: 60px var(--spacing-lg) var(--spacing-lg);
    width: 100%;
    transition: all var(--transition-slow);
    position: relative;
  }

  .team-card:hover .team-info {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.15),
      0 0 60px rgba(59, 130, 246, 0.05);
  }

  .team-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .team-info p {
    font-size: 0.9375rem;
    color: var(--color-gray-500);
    margin-bottom: 0.75rem;
  }

  .team-linkedin {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-md);
    background: rgba(59, 130, 246, 0.1);
    color: var(--color-accent);
    transition: all var(--transition-base);
  }

  .team-linkedin:hover {
    background: var(--gradient-primary);
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 900px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 600px) {
    .team-grid {
      grid-template-columns: 1fr;
      max-width: 320px;
    }

    .team-header-wrapper {
      padding: var(--spacing-lg) var(--spacing-md);
    }
  }
</style>
