---
interface Tech {
  name: string;
  description: string;
}

const technologies: Tech[] = [
  { name: 'n8n', description: 'Automatisation No-Code' },
  { name: 'Azure', description: 'Cloud Microsoft' },
  { name: 'Microsoft 365', description: 'Suite Collaborative' },
  { name: 'Power Platform', description: 'Applications Low-Code' },
  { name: 'OpenAI', description: 'Intelligence Artificielle' },
  { name: 'Cloudflare', description: 'Sécurité & Performance' },
];
---

<section class="tech-stack">
  <div class="container">
    <div class="title-wrapper">
      <h2 class="tech-title">Technologies de confiance</h2>
    </div>
    <div class="tech-carousel">
      <div class="tech-track">
        {[...technologies, ...technologies].map((tech) => (
          <div class="tech-item">
            <div class="tech-icon">
              <span class="tech-letter">{tech.name.charAt(0)}</span>
            </div>
            <div class="tech-info">
              <span class="tech-name">{tech.name}</span>
              <span class="tech-desc">{tech.description}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .tech-stack {
    padding: var(--spacing-xl) 0;
    position: relative;
  }

  .title-wrapper {
    position: relative;
    z-index: 1;
    background: white;
    text-align: center;
    padding: 1rem 0;
    margin-bottom: var(--spacing-md);
  }

  .tech-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
    position: relative;
    display: inline-block;
    padding: 0.5rem 2rem;
    background: white;
  }

  .tech-title::after {
    content: '';
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    min-width: 280px;
    height: calc(100% + 60px);
    background: white;
    z-index: -1;
  }

  .tech-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(90deg, transparent 0%, white 10%, white 90%, transparent 100%);
    -webkit-mask-image: linear-gradient(90deg, transparent 0%, white 10%, white 90%, transparent 100%);
    z-index: 2;
  }

  .tech-track {
    display: flex;
    gap: 3rem;
    animation: scroll-left 30s linear infinite;
    width: max-content;
    padding: 1.5rem 0;
  }

  .tech-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .tech-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    white-space: nowrap;
    transition: all var(--transition-base);
    position: relative;
    z-index: 2;
  }

  .tech-item:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 0 15px rgba(59, 130, 246, 0.3),
      0 0 30px rgba(59, 130, 246, 0.15),
      0 0 45px rgba(59, 130, 246, 0.05);
  }

  .tech-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
    flex-shrink: 0;
  }

  .tech-letter {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
  }

  .tech-info {
    display: flex;
    flex-direction: column;
  }

  .tech-name {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 0.9375rem;
  }

  .tech-desc {
    font-size: 0.8125rem;
    color: var(--color-gray-500);
  }

  @media (max-width: 768px) {
    .tech-track {
      gap: 1.5rem;
    }

    .tech-item {
      padding: 0.5rem 1rem;
    }

    .tech-icon {
      width: 32px;
      height: 32px;
    }

    .tech-letter {
      font-size: 0.875rem;
    }
  }
</style>
