---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Value {
  number: string;
  title: string;
  description: string;
}

interface TeamMember {
  name: string;
  role: string;
  image: string;
  linkedin?: string;
  imagePosition?: string;
  bio?: string;
}

const values: Value[] = [
  {
    number: '01',
    title: 'Clarté',
    description: 'Pas de jargon. On traduit la complexité pour que tout soit limpide et actionnable.'
  },
  {
    number: '02',
    title: 'Autonomie',
    description: 'Notre objectif : vous rendre indépendants. Des solutions que vous maîtrisez.'
  },
  {
    number: '03',
    title: 'Innovation',
    description: 'À la pointe de l\'IA pour vous offrir un avantage compétitif.'
  },
  {
    number: '04',
    title: 'Excellence',
    description: 'Des solutions robustes, testées et documentées. La qualité avant tout.'
  },
  {
    number: '05',
    title: 'Agilité',
    description: 'Une équipe réactive qui s\'adapte à vos besoins métier.'
  },
  {
    number: '06',
    title: 'Durabilité',
    description: 'Des architectures pérennes, maintenables et évolutives.'
  }
];

const team: TeamMember[] = [
  {
    name: 'Florent Coulon',
    role: 'Fondateur & CEO',
    image: '/images/team/florent.jpg',
    linkedin: 'https://www.linkedin.com/in/coulonflorent/',
    imagePosition: 'center center',
    bio: 'Passionné par l\'IA et la transformation digitale des PME. Convaincu qu\'un prototype n\'est pas un produit, il s\'assure que chaque solution soit sécurisée, mesurable et rentable. Fan de Claude Code au quotidien (et oui, il parle à son IA).'
  },
  {
    name: 'Claude',
    role: 'Intelligence Artificielle',
    image: '/images/team/claude.jpg',
    linkedin: 'https://www.linkedin.com/company/anthropicresearch',
    imagePosition: 'center 15%',
    bio: 'Créé par Anthropic pour être fiable et utile. Capable de tout faire, du tri de fichiers à la génération de code complexe. Ne demande jamais de pause café, mais apprécie les prompts bien formulés.'
  },
  {
    name: 'Astro',
    role: 'Framework Web',
    image: '/images/team/astro.jpg',
    linkedin: 'https://www.linkedin.com/company/astroinc',
    imagePosition: 'center 20%',
    bio: 'La plateforme web du futur, portée par une équipe de 10 personnes et soutenue par Cloudflare et Webflow. Spécialiste des sites ultra-rapides. Sa devise : "It\'s never been a beta time to try Astro".'
  },
  {
    name: 'Fabien Coulon',
    role: 'Associé',
    image: '/images/team/fabien.jpg',
    linkedin: 'https://www.linkedin.com/in/fabien-coulon-b2b52952/',
    imagePosition: '60% 22%',
    bio: 'Expert du traitement de la donnée et développeur chevronné, il transforme les idées ambitieuses en solutions concrètes. Porteur de projets où la data devient un levier stratégique. Sa devise : "Les données ne mentent jamais, sauf quand on les torture."'
  },
  {
    name: 'Firecrawl',
    role: 'Expert Scraping & Extraction Web',
    image: '/images/team/firecrawl.jpg',
    linkedin: 'https://www.linkedin.com/company/firecrawl-dev',
    imagePosition: 'center center',
    bio: 'Chasseur de données du web, il transforme n\'importe quel site en données propres et structurées — Markdown, JSON, screenshots — prêtes à alimenter vos IA. Là où les autres échouent face au JavaScript dynamique et aux protections anti-bot, lui passe partout, en mode furtif, sans configuration. Open source, rapide (moins d\'une seconde), intégré nativement avec n8n et les outils d\'automatisation modernes. Sa devise : "Le web ne cache rien à celui qui sait regarder."'
  }
];

const base = import.meta.env.BASE_URL;
---

<Layout title="L'équipe - BubbleStone.ai">
  <Header />
  <main class="teams-page">

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-decoration"></div>
      <div class="hero-decoration-2"></div>
      <div class="container">
        <p class="breadcrumb">
          <a href={base}>Accueil</a> / Équipe
        </p>
        <h1>Notre entreprise</h1>
        <p class="hero-text">
          BubbleStone.ai accompagne les entreprises dans leur transformation digitale grâce à l'IA et l'automatisation.<br/>
          Notre mission : traduire votre vision en solutions concrètes, durables et autonomes.
        </p>
        <div class="hero-buttons">
          <a href={`${base}#contact`} class="btn-primary">Démarrer un projet</a>
          <a href={`${base}#services`} class="btn-secondary">Nos services</a>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="values">
      <div class="container">
        <div class="values-header">
          <div class="values-title">
            <h2>Nos six valeurs</h2>
            <p class="values-subtitle">guident chaque projet</p>
          </div>
          <a href={`${base}#services`} class="btn-outline">
            Découvrir nos services →
          </a>
        </div>

        <div class="values-grid">
          {values.map((value) => (
            <article class="value-card">
              <span class="value-number">{value.number}</span>
              <h3 class="value-title">{value.title}</h3>
              <p class="value-desc">{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="team">
      <div class="container">
        <div class="team-header">
          <h2>Les experts derrière BubbleStone</h2>
          <p>Une équipe hybride humain-IA, passionnée par l'automatisation et prête à transformer votre business.</p>
        </div>

        <div class="team-grid">
          {team.map((member) => (
            <div class="team-card">
              <div class="team-avatar">
                <img src={member.image} alt={member.name} loading="lazy" style={member.imagePosition ? `object-position: ${member.imagePosition}` : ''} />
              </div>
              <h3 class="team-name">{member.name}</h3>
              <p class="team-role">{member.role}</p>
              {member.bio && (
                <p class="team-bio">{member.bio}</p>
              )}
              {member.linkedin && (
                <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="team-linkedin">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <h2>Rejoignez l'aventure</h2>
        <p>Nous sommes toujours à la recherche de talents passionnés par l'IA et l'automatisation.</p>
        <a href={`${base}#contact`} class="btn-primary">Nous contacter →</a>
      </div>
    </section>

  </main>
  <Footer />
</Layout>

<style>
  /* Base */
  .teams-page {
    padding-top: 72px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Hero */
  .hero {
    position: relative;
    padding: 80px 0 60px;
    background: linear-gradient(180deg, #eff6ff 0%, #ffffff 100%);
    text-align: center;
    overflow: hidden;
  }

  .hero-decoration {
    position: absolute;
    top: -100px;
    right: -100px;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  .hero-decoration-2 {
    position: absolute;
    bottom: -150px;
    left: -100px;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(96, 165, 250, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  .breadcrumb {
    font-size: 14px;
    color: #64748b;
    margin-bottom: 16px;
  }

  .breadcrumb a {
    color: #64748b;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: #3b82f6;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 24px;
    line-height: 1.2;
  }

  .hero-text {
    font-size: 18px;
    color: #475569;
    max-width: 700px;
    margin: 0 auto 32px;
    line-height: 1.7;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: #fff;
    font-size: 15px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 4px 14px rgba(59, 130, 246, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: #fff;
    color: #0f172a;
    font-size: 15px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    border: 1px solid #e2e8f0;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background: transparent;
    color: #3b82f6;
    font-size: 14px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    border: 2px solid #3b82f6;
    transition: all 0.2s;
  }

  .btn-outline:hover {
    background: #3b82f6;
    color: #fff;
  }

  /* Values */
  .values {
    padding: 80px 0;
    background: #f8fafc;
  }

  .values-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 48px;
    flex-wrap: wrap;
    gap: 24px;
  }

  .values-title h2 {
    font-size: 36px;
    font-weight: 700;
    color: #0f172a;
    margin: 0;
    line-height: 1.2;
  }

  .values-subtitle {
    font-size: 36px;
    font-weight: 700;
    color: #3b82f6;
    margin: 0;
    line-height: 1.2;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .value-card {
    background: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    border-color: #3b82f6;
    box-shadow: 0 20px 40px rgba(59, 130, 246, 0.1);
    transform: translateY(-4px);
  }

  .value-number {
    display: inline-block;
    font-size: 32px;
    font-weight: 700;
    color: #3b82f6;
    margin-bottom: 16px;
  }

  .value-title {
    font-size: 20px;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 12px;
  }

  .value-desc {
    font-size: 15px;
    color: #64748b;
    line-height: 1.6;
    margin: 0;
  }

  /* Team */
  .team {
    padding: 80px 0;
    background: #fff;
  }

  .team-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 56px;
  }

  .team-header h2 {
    font-size: 36px;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 16px;
  }

  .team-header p {
    font-size: 17px;
    color: #64748b;
    line-height: 1.6;
    margin: 0;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    max-width: 800px;
    margin: 0 auto;
  }

  .team-card {
    text-align: center;
  }

  .team-avatar {
    width: 100px;
    height: 100px;
    margin: 0 auto 16px;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .team-card:hover .team-avatar {
    transform: scale(1.05);
    box-shadow: 0 12px 28px rgba(59, 130, 246, 0.25);
  }

  .team-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-name {
    font-size: 17px;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 4px;
  }

  .team-role {
    font-size: 14px;
    color: #64748b;
    margin: 0 0 8px;
  }

  .team-bio {
    font-size: 13px;
    color: #64748b;
    line-height: 1.5;
    margin: 8px 0 12px;
    text-align: left;
  }

  .team-linkedin {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: #94a3b8;
    border-radius: 50%;
    transition: all 0.2s;
  }

  .team-linkedin:hover {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
  }

  /* CTA */
  .cta {
    padding: 80px 0;
    background: linear-gradient(180deg, #eff6ff 0%, #dbeafe 100%);
    text-align: center;
  }

  .cta h2 {
    font-size: 32px;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 12px;
  }

  .cta p {
    font-size: 17px;
    color: #475569;
    margin: 0 0 28px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }

    .hero h1 {
      font-size: 36px;
    }

    .values-title h2,
    .values-subtitle {
      font-size: 28px;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 60px 0 40px;
    }

    .hero h1 {
      font-size: 28px;
    }

    .hero-text {
      font-size: 16px;
    }

    .values-grid {
      grid-template-columns: 1fr;
    }

    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .values-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .values-title h2,
    .values-subtitle {
      font-size: 24px;
    }

    .team-header h2 {
      font-size: 28px;
    }
  }
</style>
